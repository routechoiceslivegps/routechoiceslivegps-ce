#!/usr/bin/env bash
set -e
DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
BASEDIR=$(dirname $DIR)
PID_FILE=${BASEDIR}/var/tasks.pid

cd $BASEDIR
echo -e "\e[96mComparing requirements\e[0m"
PREV_MD5SUM="$(md5sum requirements.txt)"
curl -s -O -L https://raw.github.com/routechoiceslivegps/routechoices-server/${1:-master}/requirements.txt
NEW_MD5SUM="$(md5sum requirements.txt)"
if [ "$PREV_MD5SUM" != "$NEW_MD5SUM" ]
then
  echo "Installing new requirements"
  source $BASEDIR/env/bin/activate
  source ~/.cargo/env
  source ~/.local/bin/env
  uv pip install --no-cache --requirement requirements.txt
else
  echo "No new requirements"
fi
source $BASEDIR/env/bin/activate
echo -e "\e[96mUpdating env variables\e[0m"
doppler secrets download --no-file --format=env 1> ".env"
echo "Done"
echo -e "\e[96mFetching new code\e[0m"
git fetch origin main
git reset --hard ${1:-origin/master}
echo -e "\e[96mCollecting static files\e[0m"
./manage.py collectstatic --noinput
echo -e "\e[96mCompressing assets\e[0m"
./manage.py compress
./manage.py migrate --noinput
echo -e "\e[96mRestart services\e[0m"
./bin/restart-all
echo "Done"
echo -e "\e[92mNew version deployed\e[0m"
